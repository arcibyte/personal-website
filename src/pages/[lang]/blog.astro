---
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { initTranslations } from "../../i18n/translate";

export async function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const currentLang = lang || "es";
const { t } = initTranslations(Astro.url);

const allPosts = await getCollection("blog");

const posts = allPosts
    .filter((post: CollectionEntry<"blog">) =>
        post.id.startsWith(`${currentLang}/`),
    )
    .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
    .map((post) => ({
        title: post.data.title,
        date: post.data.pubDate,
        url: `/${currentLang}/posts/${post.id
            .split("/")
            .pop()
            ?.replace(/\.(md|mdx)$/, "")}`,
        displayDate: post.data.pubDate.toLocaleDateString(
            currentLang === "es" ? "es-ES" : "en-US",
            {
                year: "numeric",
                month: "long",
                day: "numeric",
            },
        ),
        tags: post.data.tags || [],
    }));

const pageTitle = t("blog.title");
---

<Layout title={pageTitle} lang={currentLang}>
    <section class="max-w-3xl mx-auto py-12 px-2">
        <header class="mb-8">
            <div class="relative inline-block">
                <h1
                    class="text-3xl md:text-4xl font-black text-primary tracking-tighter relative z-10"
                >
                    {t("blog.title")}
                </h1>
            </div>
            {
                t("blog.subtitle") && (
                    <p class="text-muted text-sm mt-2 font-medium uppercase tracking-tight">
                        {t("blog.subtitle")}
                    </p>
                )
            }
        </header>

        {
            posts.length === 0 ? (
                <div class="bg-background border-2 border-primary p-6 text-center shadow-neo">
                    <p class="font-black text-foreground text-xs tracking-widest">
                        {t("blog.empty")}
                    </p>
                </div>
            ) : (
                <div class="flex flex-col gap-3">
                    {posts.map((post) => (
                        <a href={post.url} class="group block">
                            <article class="bg-background border-2 border-primary p-3 md:px-5 md:py-3 shadow-neo transition-all group-hover:shadow-none group-hover:translate-x-1 group-hover:translate-y-1">
                                <div class="flex flex-col md:flex-row md:items-center justify-between gap-2">
                                    <div class="flex flex-col gap-1">
                                        <time
                                            datetime={post.date.toISOString()}
                                            class="text-[9px] font-black uppercase tracking-[0.2em] text-muted/60"
                                        >
                                            {post.displayDate}
                                        </time>

                                        <h2 class="text-lg md:text-xl font-black text-foreground tracking-tighter uppercase| leading-none group-hover:text-accent transition-colors">
                                            {post.title}
                                        </h2>
                                    </div>

                                    <div class="flex items-center justify-between md:justify-end gap-4 mt-2 md:mt-0">
                                        {post.tags.length > 0 && (
                                            <span class="text-[9px] font-bold px-1.5 py-0.5 border border-foreground/10 bg-muted/5 text-muted uppercase">
                                                {post.tags[0]}
                                            </span>
                                        )}

                                        <span class="text-[10px] font-black uppercase text-accent tracking-widest flex items-center gap-1 whitespace-nowrap">
                                            {t("blog.read")}
                                            <span class="group-hover:translate-x-1 transition-transform">
                                                â†’
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </article>
                        </a>
                    ))}
                </div>
            )
        }
    </section>
</Layout>
