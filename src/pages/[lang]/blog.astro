---
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { initTranslations } from "../../i18n/translate";

export async function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const currentLang = lang || "es";
const { t } = initTranslations(Astro.url);

const allPosts = await getCollection("blog");

const posts = allPosts
    .filter((post: CollectionEntry<"blog">) =>
        post.id.startsWith(`${currentLang}/`),
    )
    .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
    .map((post) => ({
        title: post.data.title,
        date: post.data.pubDate,
        url: `/${currentLang}/posts/${post.id
            .split("/")
            .pop()
            ?.replace(/\.(md|mdx)$/, "")}`,
        displayDate: post.data.pubDate.toLocaleDateString(
            currentLang === "es" ? "es-ES" : "en-US",
            {
                year: "numeric",
                month: "long",
                day: "numeric",
            },
        ),
    }));

const pageTitle = currentLang === "es" ? "Art√≠culos del blog" : "Blog posts";
---

<Layout title={pageTitle} lang={currentLang}>
    <section class="max-w-4xl mx-auto py-6">
        <header class="mb-12">
            <h1 class="text-2xl font-bold text-primary">
                <div class="relative inline-block">
                    {t("title.blog")}
                    <div
                        class="absolute -bottom-2 left-0 right-0 h-3 bg-accent -rotate-1"
                    >
                    </div>
                    <div
                        class="absolute -bottom-3 left-2 right-4 h-2 bg-accent rotate-1 opacity-60"
                    >
                    </div>
                </div>
            </h1>
            <p class="text-sm uppercase mt-3 tracking-widest text-foreground">
                {t("subtitle.blog")}
            </p>
        </header>

        {
            posts.length === 0 ? (
                <div class="p-8 border-2 border-dashed rounded-lg text-center">
                    <p>
                        No posts found in:{" "}
                        <code class="bg-muted px-1">
                            src/content/blog/{currentLang}/
                        </code>
                    </p>
                </div>
            ) : (
                <ul class="space-y-3 max-w-xl">
                    {posts.map((post) => (
                        <li class="group">
                            <a href={post.url} class="block">
                                <div class="bg-neutral-100 border-2 border-primary rounded-lg p-2">
                                    <div class="flex items-baseline gap-3 text-sm text-gray-600 mb-1.5">
                                        <time
                                            datetime={post.date.toISOString()}
                                        >
                                            {post.displayDate}
                                        </time>
                                        {post.readTime && (
                                            <span>/ {post.readTime}</span>
                                        )}
                                    </div>

                                    <h2
                                        class="text-xl font-semibold text-primary mb-2 
                               group-hover:underline group-hover:decoration-accent 
                               group-hover:decoration-2 group-hover:underline-offset-4
                               transition-all duration-200"
                                    >
                                        {post.title}
                                    </h2>

                                    {post.tags && post.tags.length > 0 && (
                                        <div class="flex flex-wrap gap-2">
                                            {post.tags.map((tag) => (
                                                <span class="text-xs px-3 py-1">
                                                    {tag}
                                                </span>
                                            ))}
                                        </div>
                                    )}
                                </div>
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }
    </section>
</Layout>
