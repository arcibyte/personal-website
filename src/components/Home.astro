---
import { useTranslations } from "../i18n/utils";
import { Mail, ArrowRight } from "lucide-astro";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
  class="relative min-h-[60vh] flex items-center justify-center py-16 overflow-hidden bg-background"
>
  <div class="max-w-5xl w-full mx-auto relative z-10 px-2">
    <div class="flex flex-col gap-3">
      <div class="flex items-center gap-4">
        <h2
          class="text-xl md:text-2xl font-bold text-primary italic decoration-4 underline decoration-accent underline-offset-4"
        >
          {t("profile.name")},
        </h2>
        <div class="inline-block animate-bounce-slow">
          <img
            src="/img/icon.png"
            class="w-16 h-auto rotate-[-10deg] grayscale"
            alt="Logo Arcibyte"
          />
        </div>
      </div>

      <div class="relative group w-fit">
        <div
          class="absolute inset-0 bg-accent translate-x-2 translate-y-2 md:translate-x-3 md:translate-y-3"
        >
        </div>

        <div
          class="relative bg-primary px-2 py-3 md:px-3 md:py-3 border-4 border-foreground"
        >
          <h1
            class="text-5xl md:text-7xl font-black text-background leading-none"
          >
            {t("profile.role")}
          </h1>
        </div>
      </div>

      <div class="max-w-2xl mt-4">
        <p class="text-lg md:text-xl font-medium text-foreground leading-snug">
          {t("profile.description")}
        </p>
      </div>

      <div class="pt-6">
        <button
          onclick="window.location.href='mailto:arcibyte@gmail.com'"
          class="group relative inline-flex items-center gap-3 bg-accent px-8 py-4
         border-[3px] border-primary font-bold text-lg
         shadow-[6px_6px_0px_0px_#020402]
         transition-all duration-75
         hover:translate-x-[4px] hover:translate-y-[4px] hover:shadow-none"
        >
          <Mail class="w-6 h-6 stroke-[2.5px]" />

          <span class="tracking-tight">
            {t ? t("profile.cta") : "Get in touch"}
          </span>

          <ArrowRight
            class="w-6 h-6 stroke-[2.5px] transition-transform duration-200 group-hover:translate-x-1"
          />
        </button>
      </div>
    </div>
  </div>
</section>
