---
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "src/i18n/utils";

const supportedLocales = ["en", "es"] as const;
type Locale = (typeof supportedLocales)[number];

const currentLang = supportedLocales.includes(Astro.currentLocale as Locale)
  ? (Astro.currentLocale as Locale)
  : "en";

const translateUi = useTranslations(currentLang);
const otherLang = currentLang === "en" ? "es" : "en";
const label = otherLang.toUpperCase();
const cleanPath = Astro.url.pathname.replace(/^\/(es|en)/, "") || "/";
const switchTo = getRelativeLocaleUrl(otherLang, cleanPath);

function localePath(lang: Locale, path: string) {
  if (lang === "en") return path.startsWith("/") ? path : `/${path}`;
  return `/es${path.startsWith("/") ? path : `/${path}`}`;
}

const homeHref = localePath(currentLang, "/");
const blogHref = localePath(currentLang, "/blog");
---

<header
  class="sticky top-0 z-50 bg-background border-b-2 border-primary"
  aria-label="Main navigation"
>
  <nav class="max-w-5xl mx-auto py-4 flex items-center justify-between">
    <a href={homeHref} class="group flex items-center gap-3">
      <div class="relative">
        <img
          src="/img/profile.webp"
          alt="Foto de perfil"
          loading="lazy"
          class="w-9 h-9 rounded-full object-cover border-2 border-primary transition-transform duration-300 group-hover:scale-110 group-hover:rotate-6"
        />
        <span
          class="absolute bottom-0 right-0 h-2.5 w-2.5 rounded-full bg-accent border border-primary"
        ></span>
      </div>

      <span class="text-lg font-black tracking-tight text-primary">
        Arcibyte
      </span>
    </a>

    <div class="flex items-center gap-4 sm:gap-6">
      <a
        href={blogHref}
        class="font-bold text-primary hover:underline decoration-wavy decoration-2 decoration-accent underline-offset-4 transition-all"
      >
        {translateUi("nav.blog")}
      </a>

      <a
        href={switchTo}
        class="relative px-3 py-1.5 text-xs font-black font-mono text-primary bg-background rounded-md border-2 border-primary shadow-[3px_3px_0px_0px_oklch(var(--p))] transition-all hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none active:bg-accent"
        aria-label={`Switch to ${label}`}
      >
        {label}
      </a>
    </div>
  </nav>
</header>
