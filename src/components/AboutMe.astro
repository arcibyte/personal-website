---
import { useTranslations } from "../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="max-w-4xl mx-auto px-2 my-16">
  <div class="bg-background border-[3px] border-primary p-8 md:p-10 shadow-neo">
    <div class="flex flex-col gap-6">
      <div class="relative inline-block w-fit">
        <h2
          class="text-3xl md:text-5xl font-black text-primary tracking-tight relative z-10"
        >
          {t("aboutme.title")}
        </h2>
        <div class="absolute -bottom-1 left-0 w-full h-2 bg-accent/30 -z-10">
        </div>
      </div>

      <div
        class="flex flex-col gap-4 text-lg md:text-xl leading-relaxed text-foreground"
      >
        <p class="font-medium">
          {t("aboutme.profile")}
        </p>

        <p class="text-accent font-semibold">
          {t("aboutme.highlight")}
        </p>

        <p class="text-muted text-base md:text-lg">
          {t("aboutme.personal")}
        </p>
      </div>
    </div>
  </div>
</section>
