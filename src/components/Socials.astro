---
import { useTranslations } from "../i18n/utils";
import { socials } from "../data/socials";
import SocialItem from "../helpers/SocialItem.astro";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="mx-auto mt-20 max-w-5xl px-2">
    <div class="relative mb-8 inline-block">
        <h2
            class="text-3xl md:text-5xl font-black tracking-tighter relative z-10 text-primary"
        >
            {t("contact.title")}
        </h2>
    </div>

    <div class="border-[3px] border-primary bg-background shadow-neo">
        <div
            class="bg-background p-4 flex justify-between items-center border-b-[3px] border-primary"
        >
            <div class="flex gap-2">
                <div
                    class="h-3 w-3 rounded-full border border-foreground bg-[#FF5F56]"
                >
                </div>
                <div
                    class="h-3 w-3 rounded-full border border-foreground bg-[#FFBD2E]"
                >
                </div>
                <div
                    class="h-3 w-3 rounded-full border border-foreground bg-[#27C93F]"
                >
                </div>
            </div>
            <span
                class="text-[10px] font-bold text-muted uppercase tracking-[0.2em]"
            >
                socials.sh
            </span>
        </div>

        <div class="flex flex-col divide-y-[2px] divide-foreground/10">
            {
                socials.map((social) => (
                    <div class="group block bg-background hover:bg-foreground/5 transition-colors duration-200">
                        <div class="transition-transform duration-300 ease-out group-hover:translate-x-2 text-foreground">
                            <SocialItem {...social} />
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
