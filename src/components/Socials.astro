---
import { useTranslations } from "../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
import { socials } from "../data/socials";
import SocialItem from "./SocialItem.astro";
---

<section class="mx-auto mt-8 max-w-5xl text-primary">
    <div class="relative mb-6 inline-block">
        <h2 class="text-3xl font-black tracking-tighter relative z-10">
            {t("tile.contact")}
        </h2>
        <div
            class="absolute -bottom-1 left-0 w-full h-3 bg-accent -rotate-1 -z-10"
        >
        </div>
    </div>

    <div
        class="border-2 border-primary rounded-sm bg-background overflow-hidden shadow-[8px_8px_0px_0px_oklch(var(--p))]"
    >
        <div
            class="bg-primary p-3 flex justify-between items-center border-b-2 border-primary"
        >
            <div class="flex gap-2">
                <div
                    class="h-3 w-3 rounded-full border border-background bg-accent"
                >
                </div>
                <div
                    class="h-3 w-3 rounded-full border border-background bg-foreground"
                >
                </div>
                <div
                    class="h-3 w-3 rounded-full border border-background bg-muted"
                >
                </div>
            </div>
            <span
                class="text-[10px] font-bold text-background uppercase tracking-widest"
                >socials.sh</span
            >
        </div>

        <div class="divide-y-2 divide-primary">
            {socials.map((social) => <SocialItem {...social} />)}
        </div>
    </div>
</section>
