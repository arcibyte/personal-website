---
import { projects } from "../data/projects";
import { useTranslations } from "../i18n/utils";
import { Github, ArrowUpRight, FolderOpen } from "lucide-astro";

const { lang } = Astro.props;
const t = useTranslations(lang);

const projectList = projects || [];
---

<section
  class="max-w-5xl mx-auto mb-24 px-2"
  aria-labelledby="projects-heading"
>
  <div class="mb-8 mt-6 relative inline-block">
    <h3
      id="projects-heading"
      class="text-3xl md:text-5xl font-black text-primary relative z-10 tracking-tighter"
    >
      {t("projects.title")}
    </h3>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      projectList.map((project) => (
        <article class="group relative flex flex-col justify-between bg-background border-[3px] border-primary p-8 shadow-neo hover:shadow-none hover:translate-x-[6px] hover:translate-y-[6px] transition-all duration-200">
          <div>
            <header class="flex justify-between items-start mb-8">
              <div class="p-3 border-2 border-foreground">
                <FolderOpen class="w-6 h-6 text-foreground" stroke-width={3} />
              </div>

              <div class="flex gap-3">
                {project.githubUrl && (
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    aria-label={t("projects.code")}
                    class="p-2 bg-background border-2 border-foreground hover:bg-accent hover:text-foreground transition-colors shadow-[3px_3px_0px_0px_#001B2E] active:shadow-none"
                  >
                    <Github class="w-5 h-5" />
                  </a>
                )}
                {project.projectUrl && (
                  <a
                    href={project.projectUrl}
                    target="_blank"
                    aria-label={t("projects.view")}
                    class="p-2 bg-foreground text-background border-2 border-foreground hover:bg-accent hover:text-foreground transition-colors shadow-[3px_3px_0px_0px_#001B2E] active:shadow-none"
                  >
                    <ArrowUpRight class="w-5 h-5" />
                  </a>
                )}
              </div>
            </header>

            <h4 class="text-2xl font-black text-primary mb-4 tracking-tight">
              {t(project.titleKey)}
            </h4>

            <p class="text-foreground text-lg leading-snug mb-8 font-medium">
              {t(project.descriptionKey)}
            </p>
          </div>

          <div class="flex flex-wrap gap-2 mt-auto">
            {project.tags.map((tag) => (
              <span class="px-3 py-1 text-[10px] font-bold uppercase tracking-wider border border-foreground/30 bg-accent/60 text-foreground">
                {tag}
              </span>
            ))}
          </div>
        </article>
      ))
    }
  </div>
</section>
