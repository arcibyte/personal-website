---
interface Props {
  title: string;
  lang?: string;
}
const { title, lang } = Astro.props;
import Header from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const currentLang = lang || Astro.currentLocale || "es";
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link
      rel="preload"
      href="/fonts/space-grotesk-v22-latin-700.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/outfit-v15-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Jhon Arciniegas" />

    <title>{title}</title>

    <link rel="icon" href="/img/icon.png" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Applied data science, machine learning, and software engineering."
    />
    <meta property="og:image" content="/img/OP.jpg" />
    <meta property="og:url" content="https://www.arcibyte.vercel.app" />
  </head>

  <body
    class="bg-background text-text dark:bg-background-dark dark:text-white p-4 sm:p-0 mx-auto max-w-[580px] text-base"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Space Grotesk";
    src: url("/fonts/space-grotesk-v22-latin-700.woff2") format("woff2");
    font-weight: 700;
    font-style: normal;
    font-display: block;
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/outfit-v15-latin-regular.woff2") format("woff2");
    font-weight: 400;
    font-style: normal;
    font-display: block;
  }

  html,
  body {
    font-family: "Outfit", sans-serif;
    -webkit-font-smoothing: antialiased;
  }
  h1,
  h2,
  h3,
  h4,
  .nav-link,
  button {
    font-family: "Space Grotesk";
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.1;
  }
</style>
