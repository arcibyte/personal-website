---
interface Props {
  title: string;
  lang?: string;
}

import Header from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const { title, lang } = Astro.props;
const currentLang = lang ?? Astro.currentLocale ?? "es";
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="preload"
      href="/fonts/space-grotesk-v22-latin-700.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/outfit-v15-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Jhon Arciniegas" />

    <title>{title}</title>
    <link rel="icon" href="/img/icon.png" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Data Sotfware Developer`} />
    <meta
      property="og:description"
      content="Applied data science, machine learning, and software engineering."
    />
    <meta property="og:image" content="https://arcibyte.is-a.dev/img/OP.jpg" />
    <meta property="og:url" content="https://arcibyte.is-a.dev" />
    <meta property="og:image:width" content="1620" />
    <meta property="og:image:height" content="1080" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Data Software Developer`} />
    <meta
      name="twitter:description"
      content="Applied data science, machine learning, and software engineering."
    />
    <meta name="twitter:image" content="https://arcibyte.is-a.dev/img/OP.jpg" />
  </head>

  <body class="layout-body">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  :root {
    --background: oklch(14.5% 0 0);
    --foreground: oklch(75% 0 0);
    --primary: oklch(92.2% 0 0);
    --accent: oklch(70.5% 0.213 47.604);
    --border: rgba(255, 255, 255, 0.1);
    --muted: oklch(20.5% 0 0);
  }
  @font-face {
    font-family: "Space Grotesk";
    src: url("/fonts/space-grotesk-v22-latin-700.woff2") format("woff2");
    font-weight: 700;
    font-display: swap;
  }
  @font-face {
    font-family: "Outfit";
    src: url("/fonts/outfit-v15-latin-regular.woff2") format("woff2");
    font-weight: 400;
    font-display: swap;
  }
  html {
    background: var(--background);
  }

  body {
    font-family: "Outfit", sans-serif;
    -webkit-font-smoothing: antialiased;
  }

  .layout-body {
    @apply p-4 sm:p-0 mx-auto max-w-[580px];
  }
  .nav-link,
  button {
    font-family: "Space Grotesk", sans-serif;
    font-weight: 700;
    letter-spacing: -0.02em;
  }
  h1 {
    font-size: 2.5rem;
    line-height: 1.1;
    font-family: "Space Grotesk", sans-serif;
  }

  h2,
  h3,
  h4 {
    font-family: "Space Grotesk", sans-serif;
  }
  html::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    background: radial-gradient(
      ellipse at 50% -120%,
      rgba(255, 119, 0, 0.715) 0%,
      var(--background) 60%
    );
  }
  .nav-container {
    @apply max-w-3xl mx-auto h-14 flex items-center justify-between px-3
           rounded-full border border-transparent bg-transparent
           transition-all duration-500 transform-gpu isolate
           sticky top-4 z-50;
  }
  @keyframes stickynav {
    to {
      background-color: var(--background);
      border-color: var(--border);
      backdrop-filter: blur(12px);
    }
  }
</style>
